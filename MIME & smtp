import smtplib
from email.mime.multipart import MIMEMultipart
from email.mime.text import MIMEText
from email.mime.base import MIMEBase
from email import encoders

fromadd = "patilkshl@gmail.com"
toadd = "veenamshenoy@gmail.com"
msg = MIMEMultipart()
msg['from'] = fromadd
msg['to'] = toadd
msg["subject"] = "nice"
body = "body_of_mail"
msg.attach(MIMEText(body, "plain"))
filename = "C:\\Users\\patil\\Downloads\\maxresdefault.png"
attachment = open(filename, "rb")
p = MIMEBase("application", "octet-stream")
p.set_payload(attachment.read())
encoders.encode_base64(p)
p.add_header("Content-Disposition", "attachment; filename=" + filename)
msg.attach(p)
mainserver = smtplib.SMTP('smtp.gmail.com', 587)
mainserver.starttls()
mainserver.login(fromadd, "pkp123pkp")
text = msg.as_string()
mainserver.sendmail(fromadd, toadd, text)
mainserver.close()
